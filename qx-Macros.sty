% Contadores
\newcounter{defi}[chapter]
  \numberwithin{defi}{section}

\newtcolorbox{defi}
  {
    title = {Definición \refstepcounter{defi}\thedefi.},
    coltitle=black,
    fonttitle = \bfseries,
    colback = white,
    colframe=black,
    parbox = false,
    sharp corners,
    enhanced,
    attach boxed title to top left={yshift=-\tcboxedtitleheight/2,xshift=4mm-0.5mm},
    boxed title style = {
                          colback=white,
                          left=0.5mm,right=0.5mm,
                          boxsep=1mm,
                          %arc=2.5mm
                          frame empty
                        },
    top=1.5mm+\tcboxedtitleheight/4,
    before skip = \bigskipamount,
    after skip = \bigskipamount,
    parbox = true
  }


