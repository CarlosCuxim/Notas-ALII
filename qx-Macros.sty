% Colores
\definecolor{LighBlue}{HTML}{51C4D3}
\definecolor{MainBlue}{HTML}{126E82}
\definecolor{DarkBlue}{HTML}{132C33}

\newtcolorbox{defi}
  {
    title = {Definición \refstepcounter{teor}\theteor.},
    coltitle=black,
    fonttitle = \bfseries,
    colback = white,
    colframe=MainBlue,
    parbox = false,
    sharp corners,
    enhanced,
    attach boxed title to top left={yshift=-\tcboxedtitleheight/2,xshift=4mm-0.5mm},
    boxed title style = {
                          colback=white,
                          left=0.5mm,right=0.5mm,
                          boxsep=1mm,
                          %arc=2.5mm
                          frame empty
                        },
    top=1.5mm+\tcboxedtitleheight/4,
    before skip = \bigskipamount,
    after skip = \bigskipamount,
    breakable,
    parbox = false
  }


% Caja de ejemplos
\tcolorboxenvironment{example}{
  colback = white,
  frame hidden,
  top = 0mm,
  bottom = 0mm,
  boxsep = 0mm,
  enhanced,
  borderline west={2mm}{0pt}{MainBlue},
  parbox = false,
  before skip = \medskipamount,
  after skip = \medskipamount,
  breakable
}

% Caja de teoremas
\tcolorboxenvironment{teor}{
  colback = white,
  colframe = MainBlue,
  sharp corners,
  boxrule = 1pt,
  before skip = \bigskipamount,
  after skip = \bigskipamount,
  breakable
}


